source 'https://github.com/CocoaPods/Specs.git'

use_frameworks!

def shared_pods
    pod 'Alamofire', '~> 4.3'
    pod 'Genome', '~> 3.0'
end

target :'SwiftChatty-iOS' do
    platform :ios, '9.0'
    shared_pods
end

target :'SwiftChatty-iOSTests' do
    platform :ios, '9.0'
    shared_pods
end

target :'SwiftChatty-OSX' do
    platform :osx, '10.10'
    shared_pods
end

target :'SwiftChatty-OSXTests' do
    platform :osx, '10.10'
    shared_pods
end

target :'SwiftChatty-tvOS' do
    platform :tvos, '9.0'
    shared_pods
end

target :'SwiftChatty-tvOSTests' do
    platform :tvos, '9.0'
    shared_pods
end

target :'SwiftChatty-WatchOS' do
    platform :watchos, '2.0'
    shared_pods
end


