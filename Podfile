source 'https://github.com/CocoaPods/Specs.git'

use_frameworks!

def shared_pods
    pod 'Alamofire'
    pod 'Genome'
end

target :'SwiftChatty-iOS' do
    platform :ios, '8.0'
    shared_pods
end

target :'SwiftChatty-iOSTests' do
    platform :ios, '8.0'
    shared_pods
end

target :'SwiftChatty-OSX' do
    platform :osx, '10.9'
    shared_pods
end

target :'SwiftChatty-OSXTests' do
    platform :osx, '10.9'
    shared_pods
end

target :'SwiftChatty-tvOS' do
    platform :tvos, '9.0'
    shared_pods
end

target :'SwiftChatty-tvOSTests' do
    platform :tvos, '9.0'
    shared_pods
end

target :'SwiftChatty-WatchOS' do
    platform :watchos, '2.0'
    shared_pods
end


